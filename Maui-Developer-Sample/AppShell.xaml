<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Maui_Developer_Sample.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Maui_Developer_Sample"
    xmlns:pages="clr-namespace:Maui_Developer_Sample.Pages"
    xmlns:vibrations="clr-namespace:Maui_Developer_Sample.Pages.Vibrations"
    xmlns:sensors="clr-namespace:Maui_Developer_Sample.Pages.Sensors"
    Shell.FlyoutBehavior="Flyout"
    Title="Maui_Developer_Sample">

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate pages:MainPage}"
        Route="MainPage" />

    <ShellContent
        Title="Haptic Feedback Simple"
        ContentTemplate="{DataTemplate vibrations:HapticFeedback_Page}"
        Route="HapticFeedbackSimple_Page" />
    
    <ShellContent
        Title="Accelerometer"
        ContentTemplate="{DataTemplate sensors:Accelerometer_Page}"
        Route="Accelerometer_Page" />
    
    <ShellContent
        Title="Barometer"
        ContentTemplate="{DataTemplate sensors:Barometer_Page}"
        Route="Barometer_Page" />
    
    <ShellContent
        Title="Compass"
        ContentTemplate="{DataTemplate sensors:Compass_Page}"
        Route="Compass_Page" />
    
    <ShellContent
        Title="Gyroscope"
        ContentTemplate="{DataTemplate sensors:Gyroscope_Page}"
        Route="Gyroscope_Page" />
    
    <ShellContent
        Title="Magnetometer"
        ContentTemplate="{DataTemplate sensors:Magnetometer_Page}"
        Route="Magnetometer_Page" />
</Shell>
