<?xml version="1.0" encoding="utf-8"?>

<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Maui_Developer_Sample.Pages.MainPage">
    <ScrollView VerticalOptions="FillAndExpand"
                HorizontalOptions="FillAndExpand">
        <VerticalStackLayout Padding="30"
                             Spacing="25">
            <Label Text="Haptic Feedback / Vibration"
                   Style="{StaticResource SubHeadline}"/>
            <Button Text="Haptic Feedback"
                    Clicked="OnNavigateToHapticFeedbackSimpleClicked"
                    HorizontalOptions="Fill" />


            <Label Text="Gyro/Accel/Magne/Orient"
                   Style="{StaticResource SubHeadline}" />
            <Button Text="Accelerometer"
                    Clicked="OnNavigateToAccelerometerClicked"
                    HorizontalOptions="Fill" />
            <Button Text="Barometer"
                    Clicked="OnNavigateToBarometerClicked"
                    HorizontalOptions="Fill" />
            <Button Text="Compass"
                    Clicked="OnNavigateToCompassClicked"
                    HorizontalOptions="Fill" />
            <Button Text="Gyroscope"
                    Clicked="OnNavigateToGyroscopeClicked"
                    HorizontalOptions="Fill" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>